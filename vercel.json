{
    "version": 2,
    "builds": [
      {
        "src": "resources/js/**",
        "use": "@vercel/static-build",
        "config": { "distDir": "public" }
      }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/(.*).(js|css)", "dest": "/public/$1.$2" },
      { "src": "/(.*)", "dest": "/public/index.php" }
    ]
  }
